<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Neutron\Plugin\ContactBundle\Entity\AbstractContactInfo">   
	     
	    <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
	        <option name="fields">name</option>
	        <option name="message">name.exist</option>
   	    </constraint>
   	    
        <property name="name">
        	<constraint name="NotBlank">
                <option name="message">name.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">name.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">50</option>
                <option name="message">name.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="phone">
        	<constraint name="NotBlank">
                <option name="message">phone.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">phone.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">50</option>
                <option name="message">phone.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="fax">
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">fax.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">50</option>
                <option name="message">fax.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="email">
        	<constraint name="Email">
                <option name="message">email.invalid</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        	<constraint name="NotBlank">
                <option name="message">email.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">email.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">100</option>
                <option name="message">email.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="address">
        	<constraint name="NotBlank">
                <option name="message">address.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">address.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">address.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="postCode">
        	<constraint name="NotBlank">
                <option name="message">postCode.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">postCode.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">50</option>
                <option name="message">postCode.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="city">
        	<constraint name="NotBlank">
                <option name="message">city.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">city.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">100</option>
                <option name="message">city.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="country">
        	<constraint name="NotBlank">
                <option name="message">country.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">country.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">50</option>
                <option name="message">country.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
    </class>

</constraint-mapping>
