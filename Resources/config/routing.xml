<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="neutron_contact.backend.contact.update" pattern="/admin/plugin/contact/update/{id}">
        <default key="_controller">neutron_contact.controller.backend.contact:updateAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact.backend.contact.delete" pattern="/admin/plugin/contact/delete/{id}">
        <default key="_controller">neutron_contact.controller.backend.contact:deleteAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact.backend.contact_form" pattern="/admin/plugin/contact/form">
        <default key="_controller">neutron_contact.controller.backend.contact_form:indexAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact.backend.contact_form.update" pattern="/admin/plugin/contact/form/update/{id}">
        <default key="_controller">neutron_contact.controller.backend.contact_form:updateAction</default>
        <default key="id">0</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact.backend.contact_form.delete" pattern="/admin/plugin/contact/form/delete/{id}">
        <default key="_controller">neutron_contact.controller.backend.contact_form:deleteAction</default>
        <default key="id">0</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact.frontend.contact.handle" pattern="/plugin/contact/form/handle/{formType}">
        <default key="_controller">neutron_contact.controller.frontend.contact:contactFormHandleAction</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
