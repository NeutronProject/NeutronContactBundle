<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="neutron_contact.doctrine.contact_info_manager.default.class">Neutron\Plugin\ContactBundle\Doctrine\ContactInfoManager</parameter>
        <parameter key="neutron_contact.controller.backend.contact_info.default.class">Neutron\Plugin\ContactBundle\Controller\Backend\ContactInfoController</parameter>
        <parameter key="neutron_contact.controller.frontend.widget_contact_info.default.class">Neutron\Plugin\ContactBundle\Controller\Frontend\WidgetContactInfoController</parameter>
        <parameter key="neutron_contact.form.backend.type.contact_info.class">Neutron\Plugin\ContactBundle\Form\Backend\Type\ContactInfoType</parameter>
        <parameter key="neutron_contact.form.backend.type.contact_info.general.class">Neutron\Plugin\ContactBundle\Form\Backend\Type\ContactInfo\GeneralType</parameter>
        <parameter key="neutron_contact.form.backend.handler.contact_info.default.class">Neutron\Plugin\ContactBundle\Form\Backend\Handler\ContactInfoHandler</parameter>
        <parameter key="neutron_contact.datagrid.builder.contact_info_management.class">Neutron\Plugin\ContactBundle\DataGrid\ContactInfoManagement</parameter>
        <parameter key="neutron_contact.datagrid.builder.contact_info_multi_select_sortable.class">Neutron\Plugin\ContactBundle\DataGrid\ContactInfoMultiSelectSortableDataGrid</parameter>
        <parameter key="neutron_contact.doctrine.widget_contact_info_manager.default.class">Neutron\Plugin\ContactBundle\Doctrine\WidgetContactInfoManager</parameter>
        <parameter key="neutron_contact.form.backend.type.widget_contact_info.class">Neutron\Plugin\ContactBundle\Form\Backend\Type\WidgetContactInfoType</parameter>
    </parameters>

    <services>
        <service id="neutron_contact.doctrine.contact_info_manager.default" 
        	class="%neutron_contact.doctrine.contact_info_manager.default.class%">
            <call method="setClassName">
            	<argument>%neutron_contact.contact_info_class%</argument>
            </call>
            <call method="setObjectManager">
            	<argument type="service" id="object_manager" />
            </call>
        </service>
        
        <service id="neutron_contact.controller.backend.contact_info.default" 
            class="%neutron_contact.controller.backend.contact_info.default.class%"
        >	
            <call method="setContainer">
            	<argument type="service" id="service_container" />
            </call>    
        </service>
        
        <service id="neutron_contact.controller.frontend.widget_contact_info.default" 
            class="%neutron_contact.controller.frontend.widget_contact_info.default.class%"
        >	
            <call method="setContainer">
            	<argument type="service" id="service_container" />
            </call>    
        </service>
        
        <service id="neutron_contact.form.backend.contact_info" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%neutron_contact.form.backend.name.contact_info%</argument>
            <argument>%neutron_contact.form.backend.type.contact_info%</argument>
        </service>
        
        <service id="neutron_contact.form.backend.type.contact_info"
        	class="%neutron_contact.form.backend.type.contact_info.class%"
        >                  
            <tag name="form.type" alias="neutron_backend_contact_info" />
        </service>
        
        <service id="neutron_contact.form.backend.type.contact_info.general" 
			class="%neutron_contact.form.backend.type.contact_info.general.class%"
		>
            <call method="setContactInfoClass">
            	<argument>%neutron_contact.contact_info_class%</argument>
            </call>
            <call method="setTranslationDomain">
            	<argument>%neutron_contact.translation_domain%</argument>
            </call>
            
            <tag name="form.type" alias="neutron_backend_contact_info_general" />
		</service>
		
		<service id="neutron_contact.form.backend.handler.contact_info.default" 
        	class="%neutron_contact.form.backend.handler.contact_info.default.class%"
        >
        	<call method="setContainer">
        		<argument type="service" id="service_container" />
        	</call>
        	<call method="setForm">
        		<argument type="service" id="neutron_contact.form.backend.contact_info" />
        	</call>
        	<call method="setTranslationDomain">
        		<argument>%neutron_contact.translation_domain%</argument>
        	</call>
        </service>
        
        <service id="neutron_contact.datagrid.builder.contact_info_management" 
        	class="%neutron_contact.datagrid.builder.contact_info_management.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="router" />
        	<argument type="service" id="neutron_contact.contact_info_manager" />
        	<argument>%neutron_contact.translation_domain%</argument>
        </service>
        
        <service id="neutron_contact.datagrid.contact_info_management" 
        	class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
        	factory-service="neutron_contact.datagrid.builder.contact_info_management"
        	factory-method="build"
        >
        	<tag name="neutron_data_grid.datagrid" alias="neutron_contact_info_management" />
        </service>
        
        <service id="neutron_contact.doctrine.widget_contact_info_manager.default" 
        	class="%neutron_contact.doctrine.widget_contact_info_manager.default.class%">
            <call method="setClassName">
            	<argument>%neutron_contact.widget_contact_info_class%</argument>
            </call>
            <call method="setObjectManager">
            	<argument type="service" id="object_manager" />
            </call>
        </service>
        
        <service id="neutron_contact.datagrid.builder.contact_info_multi_select_sortable" 
        	class="%neutron_contact.datagrid.builder.contact_info_multi_select_sortable.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="router" />
        	<argument type="service" id="neutron_contact.contact_info_manager" />
        	<argument>%neutron_contact.translation_domain%</argument>
        </service>
        
        <service id="neutron_contact.datagrid.contact_info_multi_select_sortable" 
            class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
            factory-service="neutron_contact.datagrid.builder.contact_info_multi_select_sortable"
            factory-method="build"
        >
            <tag name="neutron_data_grid.datagrid" alias="neutron_contact_info_multi_select_sortable" />
        </service>
        
        <service id="neutron_contact.form.backend.type.widget_contact_info" 
            class="%neutron_contact.form.backend.type.widget_contact_info.class%"
        >
            <call method="setDataGrid">
            	<argument type="service" id="neutron_contact.datagrid.contact_info_multi_select_sortable" />
            </call>
            <call method="setEventSubscriber">
            	<argument type="service" id="neutron.form.subscriber.multi_select_sortable" />
            </call>
            <call method="setWidgetContactInfoClass">
            	<argument>%neutron_contact.widget_contact_info_class%</argument>
            </call>
            <call method="setContactInfoClass">
            	<argument>%neutron_contact.contact_info_class%</argument>
            </call>
            <call method="setContactInfoReferenceClass">
            	<argument>%neutron_contact.contact_info_reference_class%</argument>
            </call>
            <call method="setTemplates">
            	<argument>%neutron_contact.widget_contact_info_templates%</argument>
            </call>
            <call method="setTranslationDomain">
            	<argument>%neutron_contact.translation_domain%</argument>
            </call>
            
            <tag name="form.type" alias="neutron_backend_widget_contact_info" />
        </service>
       
    </services>
  
</container>
