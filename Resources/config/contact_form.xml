<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="neutron_contact.widget.contact_form.builder.class">Neutron\Plugin\ContactBundle\ContactFormWidget</parameter>
        <parameter key="neutron_contact.doctrine.contact_form_manager.default.class">Neutron\Plugin\ContactBundle\Doctrine\ContactFormManager</parameter>
        <parameter key="neutron_contact.controller.backend.contact_form.default.class">Neutron\Plugin\ContactBundle\Controller\Backend\ContactFormController</parameter>
        <parameter key="neutron_contact.controller.frontend.contact_form.default.class">Neutron\Plugin\ContactBundle\Controller\Frontend\ContactFormController</parameter>
        <parameter key="neutron_contact.form.backend.type.contact_form.class">Neutron\Plugin\ContactBundle\Form\Backend\Type\ContactFormType</parameter>
        <parameter key="neutron_contact.form.backend.type.contact_form.general.class">Neutron\Plugin\ContactBundle\Form\Backend\Type\ContactForm\GeneralType</parameter>
        <parameter key="neutron_contact.form.backend.handler.contact_form.default.class">Neutron\Plugin\ContactBundle\Form\Backend\Handler\ContactFormHandler</parameter>
        <parameter key="neutron_contact.datagrid.builder.contact_form_management.class">Neutron\Plugin\ContactBundle\DataGrid\ContactFormManagement</parameter>
    </parameters>

    <services>
        <service id="neutron_contact.widget.contact_form.builder" 
        	class="%neutron_contact.widget.contact_form.builder.class%"
        >
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="neutron_mvc.widget.factory" />
            <argument type="service" id="translator" />
            <argument>%neutron_contact.translation_domain%</argument>
        </service>
                
        <service id="neutron_contact.widget.contact_form" 
        	class="Neutron\MvcBundle\Widget\WidgetFactory"
        	factory-service="neutron_contact.widget.contact_form.builder"
        	factory-method="build"
        >
        	<tag name="neutron.widget" alias="neutron.widget.contact_form" />
        </service>
        
        <service id="neutron_contact.doctrine.contact_form_manager.default" 
        	class="%neutron_contact.doctrine.contact_form_manager.default.class%">
            <call method="setClassName">
            	<argument>%neutron_contact.contact_form_class%</argument>
            </call>
            <call method="setObjectManager">
            	<argument type="service" id="object_manager" />
            </call>
        </service>
        
        <service id="neutron_contact.controller.backend.contact_form.default" 
      		class="%neutron_contact.controller.backend.contact_form.default.class%"
        >	
 			<call method="setContainer">
            	<argument type="service" id="service_container" />
            </call>    
        </service>
        
        <service id="neutron_contact.controller.frontend.contact_form.default" 
      		class="%neutron_contact.controller.frontend.contact_form.default.class%"
        >	
 			<call method="setContainer">
            	<argument type="service" id="service_container" />
            </call>    
        </service>
        
        <service id="neutron_contact.form.backend.contact_form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%neutron_contact.form.backend.name.contact_form%</argument>
            <argument>%neutron_contact.form.backend.type.contact_form%</argument>
        </service>
        
        <service id="neutron_contact.form.backend.type.contact_form"
        	class="%neutron_contact.form.backend.type.contact_form.class%"
        >                  
            <tag name="form.type" alias="neutron_backend_contact_form" />
        </service>
        
        <service id="neutron_contact.form.backend.type.contact_form.general" 
			class="%neutron_contact.form.backend.type.contact_form.general.class%"
		>
            <call method="setContactFormClass">
            	<argument>%neutron_contact.contact_form_class%</argument>
            </call>
            <call method="setMailTemplates">
            	<argument>%neutron_contact.mail_templates%</argument>
            </call>
            <call method="setRecipients">
            	<argument>%neutron_contact.mail_recipients%</argument>
            </call>
            <call method="setFormChoices">
            	<argument>%neutron_contact.contact_form_choices%</argument>
            </call>
            <call method="setTemplates">
            	<argument>%neutron_contact.contact_form_templates%</argument>
            </call>
            <call method="setTranslationDomain">
            	<argument>%neutron_contact.translation_domain%</argument>
            </call>
            
            <tag name="form.type" alias="neutron_backend_contact_form_general" />
		</service>
		
		<service id="neutron_contact.form.backend.handler.contact_form.default" 
        	class="%neutron_contact.form.backend.handler.contact_form.default.class%"
        >
        	<call method="setContainer">
        		<argument type="service" id="service_container" />
        	</call>
        	<call method="setForm">
        		<argument type="service" id="neutron_contact.form.backend.contact_form" />
        	</call>
        	<call method="setTranslationDomain">
        		<argument>%neutron_contact.translation_domain%</argument>
        	</call>
        </service>
        
        <service id="neutron_contact.datagrid.builder.contact_form_management" 
        	class="%neutron_contact.datagrid.builder.contact_form_management.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="router" />
        	<argument type="service" id="neutron_contact.contact_form_manager" />
        	<argument>%neutron_contact.translation_domain%</argument>
        </service>
        
        <service id="neutron_contact.datagrid.contact_form_management" 
        	class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
        	factory-service="neutron_contact.datagrid.builder.contact_form_management"
        	factory-method="build"
        >
        	<tag name="neutron_data_grid.datagrid" alias="neutron_contact_form_management" />
        </service>
        
        
    </services>
  
</container>
