<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="neutron_contact.plugin.builder.class">Neutron\Plugin\ContactBundle\ContactPlugin</parameter>
        <parameter key="neutron_contact.form.frontend.handler.contact_form.default.class">Neutron\Plugin\ContactBundle\Form\Frontend\Handler\ContactFormHandler</parameter>
        <parameter key="neutron_contact.mailer.default.class">Neutron\Plugin\ContactBundle\Mailer\ContactMailer</parameter>
    </parameters>

    <services>
        <service id="neutron_contact.plugin.builder" class="%neutron_contact.plugin.builder.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="neutron_mvc.plugin.factory" />
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
            <argument>%neutron_contact.translation_domain%</argument>
        </service>
        
        
        <service id="neutron_contact.plugin" 
        	class="Neutron\MvcBundle\Plugin\PluginFactory"
        	factory-service="neutron_contact.plugin.builder"
        	factory-method="build"
        >
            <tag name="neutron.plugin" alias="neutron.plugin.contact"/>
        </service>
        
        <service id="neutron_contact.mailer.default" 
        	class="%neutron_contact.mailer.default.class%"
        >
        	<call method="setContainer">
        		<argument type="service" id="service_container" />
        	</call>
        </service>
        
        <service id="neutron_contact.form.frontend.handler.contact_form.default" 
        	class="%neutron_contact.form.frontend.handler.contact_form.default.class%"
        >
        	<call method="setContainer">
        		<argument type="service" id="service_container" />
        	</call>

        	<call method="setTranslationDomain">
        		<argument>%neutron_contact.translation_domain%</argument>
        	</call>
        </service>
        
    </services>
  
</container>
